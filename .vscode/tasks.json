{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Activate venv",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source .venv/bin/activate && echo 'âœ… Virtual environment activated!' && echo 'Python: $(which python)' && echo 'Pytest: $(which pytest)' && exec bash"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Run all tests (pytest)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source .venv/bin/activate && python -m pytest tests/ -v --tb=short"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/tests:${workspaceFolder}"
                }
            }
        },
        {
            "label": "Run all unittest tests (legacy)",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "unittest",
                "discover",
                "-s",
                "tests",
                "-p",
                "test_*.py",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/tests:${workspaceFolder}"
                }
            }
        },
        {
            "label": "Run churn fix tests",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "unittest",
                "tests.kpis.test_churn_time_based_fix",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/tests:${workspaceFolder}"
                }
            }
        },
        {
            "label": "Run tests with coverage (pytest)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source .venv/bin/activate && python -m pytest tests/ --cov=src --cov-report=html:coverage_html --cov-report=term-missing --cov-report=xml -v"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/tests:${workspaceFolder}"
                }
            }
        },
        {
            "label": "Run unittest with coverage (legacy)",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "coverage",
                "run",
                "--source=src",
                "--omit=*/tests/*,*/__pycache__/*,*/venv/*",
                "-m",
                "unittest",
                "discover",
                "-s",
                "tests",
                "-p",
                "test_*.py"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/tests:${workspaceFolder}"
                }
            }
        },
        {
            "label": "Generate coverage report",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "coverage",
                "report",
                "-m"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Generate HTML coverage report",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "coverage",
                "html",
                "--directory=coverage_html"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Open coverage report",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "http.server",
                "8080",
                "--directory",
                "coverage_html"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Full coverage workflow",
            "dependsOrder": "sequence", 
            "dependsOn": [
                "Run tests with coverage (pytest)"
            ],
            "group": {
                "kind": "test", 
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Full coverage workflow (unittest legacy)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Run unittest with coverage (legacy)",
                "Generate HTML coverage report"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}